<!-- RADIO -->
 <!-- script -->
 // radio label
 function checkRadio() {
     const correctAnswers = {
         question1: '1',
         question2: '1',
         question3: '3',
         question4: '3'
     };

     let allCorrect = true;

     for (const question in correctAnswers) {
         const selectedAnswer = document.querySelector(`input[name="${question}"]:checked`);
         const taskElement = document.querySelector(`input[name="${question}"]`).closest('.task');

         if (selectedAnswer && selectedAnswer.value === correctAnswers[question]) {
             taskElement.classList.add('correct');
             taskElement.classList.remove('incorrect');
         } else {
             taskElement.classList.add('incorrect');
             taskElement.classList.remove('correct');
             allCorrect = false;
         }
     }

     if (allCorrect) {
         alert("Все ответы верны!");
     } else {
         alert("Есть ошибки в ответах.");
     }

 }
 <!-- html -->
 <div class="task">
    
    <div class="options">
        <label><input type="radio" name="question1" value="1"> Вариант 1</label>
        <label><input type="radio" name="question1" value="2"> Вариант 2</label>
        <label><input type="radio" name="question1" value="3"> Вариант 3</label>
    </div>
</div>

<div class="task">
    
    <div class="options">
        <label><input type="radio" name="question2" value="1"> Вариант 1</label>
        <label><input type="radio" name="question2" value="2"> Вариант 2</label>
        <label><input type="radio" name="question2" value="3"> Вариант 3</label>
    </div>
</div>

<button onclick="checkRadio()">Проверить</button>


